<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.duboku" name="Duboku" version="3.0.0" provider-name="groggyegg">
    <requires>
        <import addon="script.module.beautifulsoup4"/>
        <import addon="script.module.peewee"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.xbmcext"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="duboku/addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Video plugin for Duboku</summary>
        <description lang="en_GB">Watch Asian drama, show and animation.</description>
        <platform>all</platform>
        <license>MIT License</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
